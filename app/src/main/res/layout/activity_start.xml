<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androiddeveloper.webprog26.chordsgenerator_0_3.StartActivity">

    <ImageView
        android:id="@+id/iv_start_app_logo"
        android:layout_width="@dimen/start_app_logo_width"
        android:layout_height="@dimen/start_app_logo_height"
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_title"
        android:layout_alignParentBottom="true"/>

    <ViewStub
        android:id="@+id/vs_unpacking_chords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/unpacking_chords_to_db_layout"
        android:layout_above="@id/btn_start"/>

</RelativeLayout>
